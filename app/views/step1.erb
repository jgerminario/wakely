<form action="/commitment" method="POST">
	<div id="step1" class="hidden_step">
		<img src="/imgs/time.svg" class="svg step_img" alt="clock" />
		<h3 class="step_title">When do you want to <br /> wake up <%= Time.now.hour > 9 ? "tomorrow" : "today" %>?</h3>
			<div id="time" class="time_area">
				<input type="text" class="step_time" name="hour" placeholder="HH" value="5" /><span class="am">:</span><input type="text" class="step_time" type="text" name="minute" placeholder="MM" value="00" / >
				<!-- <input id="ampm_input" name="ampm" type="hidden" value="am"> -->
				<span class="am">am</span>
				<!-- <button type="button" id="ampm" value="am">am</button> -->
			</div>
			<button class="next_button">Next</button>
	</div>
	<div id="step2" class="hidden_step">
		<div class="left w50">
			<img src="/imgs/map.svg" class="svg step_img" alt="map" />
			<h3 class="step_title">How long do you<br/>want to walk?</h3>
			<div id="info" class="step_dist"></div>
		</div>
		<div class="right w50">
			<div id="map" class="map_div">
				<div class="loading">
					<h4 class="step_title">Loading...</h4>
					<img src="imgs/loader.gif">
				</div>
			</div>
		</div>
		<input id="distance-input" name="distance" type="hidden">
		<input id="position-input" name="position" type="hidden">
	</div>

	<div id="step3">
		<img src="/imgs/bird.svg" class="svg step_img" alt="bird" />
		<h3 class="step_title">What do you want to say <br /> if you are unsuccessful?</h3>
		<textarea id="tweettextarea" class="step_textarea" name="tweet" ></textarea><br />
		<p class="counter">140</p>
		<div class="step_buttons">
			<button class="next_button left">More embarrassing!</button>
			<button type="submit" class="next_button right final_button">Let's do it!</button>
		</div>
	</div>

	<div id="confirmation" class="hidden_step">

		<div class="left w50">
			<img src="/imgs/man.svg" class="svg step_img" alt="bird" />
			<% if @name %>
				<a href="/auth" id="auth"><img src="imgs/twitter.png" alt="Sign in to Twitter"></a>
			<% elsif @success == "success" %>
				<h2>Congratulations! Now get the day started!</h2>
			<% elsif @commitment %>
				<h3 class="step_title">You're scheduled to wake and walk by <%= @commitment.scheduled_for.day == Time.now.day ? "today" : "tomorrow" %> at <%= @commitment.scheduled_for.strftime("%l:%M %P") %></h3>
			<% end %>
		</div>
		<textarea id="tweettextarea" class="step_textarea" name="tweet" ></textarea><br />
		<p class="counter">140</p>
		<div class="step_buttons">
			<button class="next_button left">More embarrassing!</button>
			<button type="submit" class="next_button right final_button">Let's do it!</button>
		</div>
	</div>
</form>


